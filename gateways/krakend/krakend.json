{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "ddd-micro-gateway",
  "port": 8080,
  "timeout": "3s",
  "cache_ttl": "300s",
  "extra_config": {
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false
    }
  },
  "endpoints": [
    {
      "endpoint": "/users/register",
      "method": "POST",
      "input_headers": ["Authorization", "Content-Type"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/users/register",
          "encoding": "json",
          "sd": "static",
          "host": ["http://localhost:8085"],
          "extra_config": {
            "proxy/headers": {
              "request": {
                "pass": ["Authorization", "Content-Type"]
              }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/users/login",
      "method": "POST",
      "input_headers": ["Authorization", "Content-Type"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/users/login",
          "encoding": "json",
          "sd": "static",
          "host": ["http://localhost:8085"],
          "extra_config": {
            "proxy/headers": {
              "request": { "pass": ["Authorization", "Content-Type"] }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/users/refresh-token",
      "method": "POST",
      "input_headers": ["Authorization", "Content-Type"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/users/refresh-token",
          "encoding": "json",
          "sd": "static",
          "host": ["http://localhost:8085"],
          "extra_config": {
            "proxy/headers": {
              "request": { "pass": ["Authorization", "Content-Type"] }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/users/profile",
      "method": "GET",
      "input_headers": ["Authorization", "Content-Type"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/users/profile",
          "encoding": "json",
          "sd": "static",
          "host": ["http://localhost:8085"],
          "extra_config": {
            "proxy/headers": {
              "request": { "pass": ["Authorization", "Content-Type"] }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/users",
      "method": "GET",
      "input_headers": ["Authorization", "Content-Type"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/admin/users",
          "encoding": "json",
          "sd": "static",
          "host": ["http://localhost:8085"],
          "extra_config": {
            "proxy/headers": {
              "request": { "pass": ["Authorization", "Content-Type"] }
            }
          }
        }
      ]
    },
    {
      "endpoint": "/users/{id}",
      "method": "GET",
      "input_headers": ["Authorization", "Content-Type"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/api/v1/admin/users/{id}",
          "encoding": "json",
          "sd": "static",
          "host": ["http://localhost:8085"],
          "extra_config": {
            "proxy/headers": {
              "request": { "pass": ["Authorization", "Content-Type"] }
            }
          }
        }
      ]
    }
  ]
}
